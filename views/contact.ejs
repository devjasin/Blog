<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Me</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: #f4f4f4;
    }

    /* Navbar */
    .navbar {
      background-color: #333;
      overflow: hidden;
      padding: 15px;
      text-align: center;
    }

    .navbar a {
      color: white;
      padding: 14px 20px;
      text-decoration: none;
      display: inline-block;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    /* Contact Page Content */
    .contact-container {
      max-width: 800px;
      margin: 50px auto;
      padding: 20px;
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .contact-container h2 {
      margin-bottom: 20px;
      font-size: 2rem;
    }

    /* Photo */
    .contact-container img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
    }

    /* Basic Info */
    .basic-info {
      margin-bottom: 30px;
    }

    .basic-info p {
      font-size: 1.2rem;
      margin: 5px 0;
    }

    /* Social Media Links */
    .social-links {
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    .social-links a {
      display: inline-block;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 1rem;
      color: white;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .social-links a.facebook {
      background-color: #3b5998;
    }

    .social-links a.facebook:hover {
      background-color: #334d84;
    }

    .social-links a.instagram {
      background-color: #e4405f;
    }

    .social-links a.instagram:hover {
      background-color: #d1305f;
    }

    .social-links a.linkedin {
      background-color: #0077b5;
    }

    .social-links a.linkedin:hover {
      background-color: #006298;
    }

    /* Footer */
    .footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 20px;
      position: relative;
      bottom: 0;
      width: 100%;
      margin-top: 50px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <%-include("./navbar")%>

  <!-- Contact Content -->
  <div class="contact-container">
    <h2>Contact Me</h2>

    <!-- Profile Photo -->
    <img src="https://via.placeholder.com/150" alt="Your Photo">

    <!-- Basic Info -->
    <div class="basic-info">
      <p>Name: Jasin Thapa</p>
      <p>Email: jasinthapa75@gmail.com</p>
      <p>Phone: 9851148975</p>
      <p>Location: Kathmandu, Nepal</p>
    </div>

    <!-- Social Media Links -->
    <div class="social-links">
      <a href="https://www.facebook.com/yourprofile" class="facebook" target="_blank">Facebook</a>
      <a href="https://www.instagram.com/yourprofile" class="instagram" target="_blank">Instagram</a>
      <a href="https://www.linkedin.com/in/yourprofile" class="linkedin" target="_blank">LinkedIn</a>
    </div>
  </div>

  <!-- Footer -->
  <%-include("./footer.ejs")%>

</body>
</html>
